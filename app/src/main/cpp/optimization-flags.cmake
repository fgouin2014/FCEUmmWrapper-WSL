# Flags d'optimisation par arch
if (ANDROID_ABI STREQUAL "arm64-v8a")
    set(OPT_FLAGS "-O3 -ffast-math -march=armv8-a -DANDROID_SUPPORT_FLEXIBLE_PAGE_SIZES=ON")
elseif (ANDROID_ABI STREQUAL "armeabi-v7a")
    set(OPT_FLAGS "-O2 -mfpu=neon -march=armv7-a -DANDROID_SUPPORT_FLEXIBLE_PAGE_SIZES=ON")
elseif (ANDROID_ABI STREQUAL "x86")
    set(OPT_FLAGS "-O2 -m32 -DANDROID_SUPPORT_FLEXIBLE_PAGE_SIZES=ON")
elseif (ANDROID_ABI STREQUAL "x86_64")
    set(OPT_FLAGS "-O3 -m64 -DANDROID_SUPPORT_FLEXIBLE_PAGE_SIZES=ON")
else()
    set(OPT_FLAGS "-O2 -DANDROID_SUPPORT_FLEXIBLE_PAGE_SIZES=ON")
endif() 