<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1E1E1E">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Titre de la configuration -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Configuration des Overlays"
            android:textSize="20sp"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:layout_marginBottom="16dp" />

        <!-- Section Opacité -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Opacité de l'Overlay"
            android:textSize="16sp"
            android:textColor="@android:color/white"
            android:layout_marginTop="16dp" />

        <SeekBar
            android:id="@+id/overlay_opacity_seekbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="100"
            android:progress="80"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/opacity_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="80%"
            android:textColor="@android:color/white"
            android:gravity="center" />

        <!-- Section Sensibilité -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sensibilité Tactile"
            android:textSize="16sp"
            android:textColor="@android:color/white"
            android:layout_marginTop="16dp" />

        <SeekBar
            android:id="@+id/touch_sensitivity_seekbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="100"
            android:progress="50"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/sensitivity_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="50%"
            android:textColor="@android:color/white"
            android:gravity="center" />

        <!-- Section Diagonales -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sensibilité des Diagonales"
            android:textSize="16sp"
            android:textColor="@android:color/white"
            android:layout_marginTop="16dp" />

        <SeekBar
            android:id="@+id/diagonal_sensitivity_seekbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="100"
            android:progress="50"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/diagonal_sensitivity_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="50%"
            android:textColor="@android:color/white"
            android:gravity="center" />

        <!-- Boutons de contrôle -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="24dp">

            <Button
                android:id="@+id/btn_reset_overlay"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Réinitialiser"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/btn_save_overlay"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Sauvegarder"
                android:layout_marginStart="8dp" />

        </LinearLayout>

    </LinearLayout>

</ScrollView> 