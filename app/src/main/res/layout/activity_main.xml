<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#1E1E1E">

    <!-- Zone de jeu (50%) -->
    <FrameLayout
        android:id="@+id/game_viewport"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5">

        <!-- Vue d'émulation -->
        <com.fceumm.wrapper.EmulatorView
            android:id="@+id/emulator_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
            
        <!-- Vue de rendu pour l'overlay RetroArch -->
        <com.fceumm.wrapper.overlay.OverlayRenderView
            android:id="@+id/overlay_render_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:visibility="visible"
            android:elevation="1dp" />

        <!-- Menu de pause (superposé) -->
        <LinearLayout
            android:id="@+id/pause_menu"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="#80000000"
            android:gravity="center"
            android:visibility="gone"
            android:elevation="10dp">

            <!-- Titre du menu -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="⏸️ Jeu en Pause"
                android:textColor="@android:color/white"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_marginBottom="40dp" />

            <!-- Bouton Reprendre -->
            <Button
                android:id="@+id/btn_resume"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:text="▶️ Reprendre"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:background="@android:color/holo_green_dark"
                android:layout_marginBottom="15dp" />

            <!-- Bouton Paramètres -->
            <Button
                android:id="@+id/btn_pause_settings"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:text="⚙️ Paramètres"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:background="@android:color/holo_blue_dark"
                android:layout_marginBottom="15dp" />

            <!-- Bouton Retour au Menu -->
            <Button
                android:id="@+id/btn_back_to_menu"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:text="🏠 Menu Principal"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:background="@android:color/holo_orange_dark"
                android:layout_marginBottom="15dp" />

            <!-- Bouton Quitter -->
            <Button
                android:id="@+id/btn_quit"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:text="❌ Quitter"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:background="@android:color/holo_red_dark" />

        </LinearLayout>

    </FrameLayout>

    <!-- Zone contrôles (50%) -->
    <LinearLayout
        android:id="@+id/controls_area"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:orientation="horizontal"
        android:background="#80000000"
        android:padding="8dp"
        android:visibility="visible">

        <!-- Ici peuvent être ajoutés des contrôles supplémentaires si nécessaire -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contrôles"
            android:textColor="@android:color/white"
            android:textSize="12sp" />

    </LinearLayout>

</LinearLayout> 