<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/black"
    android:padding="20dp">

    <!-- Titre -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="🔊 Audio Basse Latence"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:layout_marginBottom="30dp" />

    <!-- Informations de latence -->
    <TextView
        android:id="@+id/tv_latency_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Latence: ..."
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:background="@android:color/holo_blue_dark"
        android:padding="15dp"
        android:layout_marginBottom="20dp" />

    <!-- Taille du buffer -->
    <TextView
        android:id="@+id/tv_buffer_size"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Buffer: ..."
        android:textColor="@android:color/white"
        android:textSize="14sp"
        android:layout_marginBottom="10dp" />

    <!-- Taille de la queue -->
    <TextView
        android:id="@+id/tv_queue_size"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Queue: ..."
        android:textColor="@android:color/white"
        android:textSize="14sp"
        android:layout_marginBottom="30dp" />

    <!-- Contrôle du buffer -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Multiplicateur de buffer:"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:layout_marginBottom="10dp" />

    <SeekBar
        android:id="@+id/sb_buffer_multiplier"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp" />

    <!-- Boutons -->
    <Button
        android:id="@+id/btn_test_latency"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="🎵 Tester la Latence"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:background="@android:color/holo_green_dark"
        android:layout_marginBottom="15dp" />

    <Button
        android:id="@+id/btn_apply_settings"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="✅ Appliquer Paramètres"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:background="@android:color/holo_blue_dark"
        android:layout_marginBottom="15dp" />

    <Button
        android:id="@+id/btn_refresh_info"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="🔄 Actualiser Infos"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        android:background="@android:color/holo_orange_dark"
        android:layout_marginBottom="20dp" />

    <!-- Bouton retour -->
    <Button
        android:id="@+id/btn_back"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="⬅️ Retour"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:background="@android:color/holo_red_dark"
        android:layout_gravity="center" />

</LinearLayout> 