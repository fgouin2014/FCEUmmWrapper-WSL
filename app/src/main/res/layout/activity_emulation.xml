<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/black">

    <!-- Zone de jeu principale (70% en portrait) -->
    <FrameLayout
        android:id="@+id/game_viewport"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5">

        <!-- Vue de l'émulateur -->
        <com.fceumm.wrapper.EmulatorView
            android:id="@+id/emulator_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <!-- Vue de rendu des overlays RetroArch -->
        <com.fceumm.wrapper.overlay.OverlayRenderView
            android:id="@+id/overlay_render_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </FrameLayout>

    <!-- Zone de contrôles en bas (30% en portrait) -->
    <LinearLayout
        android:id="@+id/controls_area"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:orientation="vertical"
        android:background="#80000000"
        android:visibility="visible">

        <!-- L'OverlayRenderView sera déplacé ici dynamiquement en mode portrait -->
        
    </LinearLayout>

</LinearLayout> 