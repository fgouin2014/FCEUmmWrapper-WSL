<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#1A1A1A"
    android:padding="0dp">

    <!-- **100% RETROARCH AUTHENTIQUE** : Titre du menu - FULLSCREEN -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="⚙️ Paramètres"
        android:textColor="@android:color/white"
        android:textSize="48sp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="20dp" />

    <!-- **100% RETROARCH AUTHENTIQUE** : Sous-titre -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Configuration RetroArch"
        android:textColor="#CCCCCC"
        android:textSize="24sp"
        android:layout_gravity="center"
        android:layout_marginBottom="40dp" />

    <!-- **100% RETROARCH AUTHENTIQUE** : ScrollView pour les paramètres -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- **100% RETROARCH AUTHENTIQUE** : Section Performance -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="🎯 Performance"
                android:textColor="#00FF00"
                android:textSize="28sp"
                android:textStyle="bold"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp" />

            <!-- FPS Target -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="16dp"
                android:background="@drawable/retroarch_rom_item_background"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="FPS Target"
                    android:textColor="@android:color/white"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <Spinner
                    android:id="@+id/fps_spinner"
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:background="@drawable/retroarch_button_background" />

            </LinearLayout>

            <!-- **100% RETROARCH AUTHENTIQUE** : Section Affichage -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="🖥️ Affichage"
                android:textColor="#00FF00"
                android:textSize="28sp"
                android:textStyle="bold"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="30dp" />

            <!-- Mode d'affichage -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="16dp"
                android:background="@drawable/retroarch_rom_item_background"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Mode d'affichage"
                    android:textColor="@android:color/white"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <Spinner
                    android:id="@+id/display_mode_spinner"
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:background="@drawable/retroarch_button_background" />

            </LinearLayout>

            <!-- **100% RETROARCH AUTHENTIQUE** : Section Contrôles -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="🎮 Contrôles"
                android:textColor="#00FF00"
                android:textSize="28sp"
                android:textStyle="bold"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="30dp" />

            <!-- Sensibilité tactile -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="16dp"
                android:background="@drawable/retroarch_rom_item_background"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Sensibilité tactile"
                    android:textColor="@android:color/white"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <SeekBar
                    android:id="@+id/touch_sensitivity_seekbar"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:max="100"
                    android:progress="50" />

            </LinearLayout>

            <!-- **100% RETROARCH AUTHENTIQUE** : Section Système -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="🔧 Système"
                android:textColor="#00FF00"
                android:textSize="28sp"
                android:textStyle="bold"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="30dp" />

            <!-- Réinitialiser les paramètres -->
            <Button
                android:id="@+id/btn_reset_settings"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="🔄 Réinitialiser les paramètres"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                android:background="@drawable/retroarch_button_background"
                android:layout_marginBottom="8dp" />

            <!-- Sauvegarder les paramètres -->
            <Button
                android:id="@+id/btn_save_settings"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="💾 Sauvegarder les paramètres"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                android:background="@drawable/retroarch_button_background"
                android:layout_marginBottom="8dp" />

        </LinearLayout>

    </ScrollView>

    <!-- **100% RETROARCH AUTHENTIQUE** : Bouton Retour - STYLE RETROARCH -->
    <Button
        android:id="@+id/btn_back"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:text="⬅️ Retour au Menu"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        android:background="@drawable/retroarch_button_background"
        android:layout_gravity="center"
        android:layout_marginBottom="40dp"
        android:layout_marginTop="20dp" />

</LinearLayout> 