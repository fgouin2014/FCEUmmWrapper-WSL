<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@android:color/black"
    android:padding="20dp">

    <!-- Titre -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="⚙️ Paramètres"
        android:textColor="@android:color/white"
        android:textSize="28sp"
        android:textStyle="bold"
        android:layout_marginBottom="40dp" />

    <!-- Section Overlays -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="🎮 Overlays de Contrôles"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginBottom="20dp" />

    <!-- Overlay NES (Flat) -->
    <Button
        android:id="@+id/btn_overlay_nes"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:text="🕹️ NES (Flat) - Officiel"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:background="@android:color/holo_green_dark"
        android:layout_marginBottom="10dp" />

    <!-- Overlay Retropad -->
    <Button
        android:id="@+id/btn_overlay_retropad"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:text="🎮 Retropad - Universel"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:background="@android:color/holo_blue_dark"
        android:layout_marginBottom="10dp" />

    <!-- Overlay SNES -->
    <Button
        android:id="@+id/btn_overlay_snes"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:text="🎮 SNES - 4 boutons"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:background="@android:color/holo_purple"
        android:layout_marginBottom="10dp" />

    <!-- Overlay Nintendo 64 -->
    <Button
        android:id="@+id/btn_overlay_n64"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:text="🎮 Nintendo 64 - 6 boutons"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:background="@android:color/holo_orange_dark"
        android:layout_marginBottom="20dp" />

    <!-- Bouton Retour -->
    <Button
        android:id="@+id/btn_back"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="⬅️ Retour"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:background="@android:color/darker_gray"
        android:layout_marginTop="20dp" />

</LinearLayout> 