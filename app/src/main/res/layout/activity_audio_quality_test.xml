<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/black"
    android:padding="20dp">

    <!-- Titre -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="🎵 Test Qualité Audio"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:layout_marginBottom="30dp" />

    <!-- Informations audio -->
    <TextView
        android:id="@+id/tv_audio_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Informations audio..."
        android:textColor="@android:color/white"
        android:textSize="14sp"
        android:background="@android:color/holo_blue_dark"
        android:padding="15dp"
        android:layout_marginBottom="30dp" />

    <!-- Boutons de test -->
    <Button
        android:id="@+id/btn_test_low_latency"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="⚡ Test Basse Latence"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:background="@android:color/holo_green_dark"
        android:layout_marginBottom="15dp" />

    <Button
        android:id="@+id/btn_test_clean_audio"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="🔇 Test Audio Propre"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:background="@android:color/holo_blue_dark"
        android:layout_marginBottom="15dp" />

    <Button
        android:id="@+id/btn_compare_audio"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="📊 Comparer Modes"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:background="@android:color/holo_orange_dark"
        android:layout_marginBottom="30dp" />

    <!-- Instructions -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Instructions:\n1. Testez chaque mode\n2. Écoutez la qualité\n3. Comparez les résultats\n4. Choisissez le meilleur"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        android:gravity="center"
        android:layout_marginBottom="30dp" />

    <!-- Bouton retour -->
    <Button
        android:id="@+id/btn_back"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="⬅️ Retour"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:background="@android:color/holo_red_dark"
        android:layout_gravity="center" />

</LinearLayout> 