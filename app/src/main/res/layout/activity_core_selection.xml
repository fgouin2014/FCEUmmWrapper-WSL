<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@android:color/black"
    android:padding="20dp">

    <!-- Titre -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="🔧 Sélection Core"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="40dp" />

    <!-- Affichage du core actuel -->
    <TextView
        android:id="@+id/tv_current_core"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Core actuel : Pré-compilé"
        android:textColor="@android:color/holo_green_light"
        android:textSize="16sp"
        android:layout_marginBottom="40dp"
        android:gravity="center" />

    <!-- Bouton Cores Pré-compilés -->
    <Button
        android:id="@+id/btn_use_compiled"
        android:layout_width="250dp"
        android:layout_height="70dp"
        android:text="📦 Cores Pré-compilés\n(coresCompiled)"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:background="@android:color/holo_blue_dark"
        android:layout_marginBottom="20dp" />

    <!-- Bouton Cores Personnalisés -->
    <Button
        android:id="@+id/btn_use_custom"
        android:layout_width="250dp"
        android:layout_height="70dp"
        android:text="🔧 Cores Personnalisés\n(coreCustom)"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:background="@android:color/holo_orange_dark"
        android:layout_marginBottom="40dp" />

    <!-- Bouton Retour -->
    <Button
        android:id="@+id/btn_back"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="← Retour"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        android:background="@android:color/holo_red_dark" />

</LinearLayout> 