<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black">

    <!-- Zone de jeu plein écran en landscape (100% RetroArch) -->
    <FrameLayout
        android:id="@+id/game_viewport"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Vue d'émulation -->
        <com.fceumm.wrapper.EmulatorView
            android:id="@+id/emulator_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </FrameLayout>

    <!-- Overlay tactile RetroArch full screen (100% RetroArch) -->
    <com.fceumm.wrapper.overlay.OverlayRenderView
        android:id="@+id/overlay_render_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent" />

    <!-- Zone de contrôles cachée en landscape (0% - comme RetroArch) -->
    <LinearLayout
        android:id="@+id/controls_area"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0"
        android:orientation="vertical"
        android:background="#80000000"
        android:visibility="gone" />

</FrameLayout> 