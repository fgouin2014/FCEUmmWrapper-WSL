<?xml version="1.0" encoding="utf-8"?>
<!-- LAYOUT PRINCIPAL - BOUTONS DU HAUT DE LA SURFACE DE JEU -->
<!-- Fichier: layout_principal_boutons_haut.xml -->
<!-- À intégrer dans activity_game.xml -->

<!-- ========================================== -->
<!-- CONTAINER PRINCIPAL DES BOUTONS DU HAUT -->
<!-- ========================================== -->
<LinearLayout
    android:id="@+id/topButtonContainer"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="end"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:layout_marginTop="30dp">

    <!-- ========================================== -->
    <!-- BOUTON SAUVEGARDE -->
    <!-- ========================================== -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">
        <Button
            android:id="@+id/btnSave"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:alpha="0.9"
            android:background="@drawable/save_button"
            android:contentDescription="Sauvegarder l'état du jeu" />
        <TextView
            android:id="@+id/labelSave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="2dp"
            android:text="Sauvegarder"
            android:textColor="#fff"
            android:textSize="10sp" />
    </LinearLayout>
    <Space android:layout_width="16dp" android:layout_height="36dp" />

    <!-- ========================================== -->
    <!-- BOUTON CAPTURE D'ÉCRAN -->
    <!-- ========================================== -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">
        <Button
            android:id="@+id/btnScreenshot"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:alpha="0.9"
            android:background="@drawable/screenshot_button"
            android:contentDescription="Prendre une capture d'écran du jeu" />
        <TextView
            android:id="@+id/labelScreenshot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="2dp"
            android:text="Capture"
            android:textColor="#fff"
            android:textSize="10sp" />
    </LinearLayout>
    <Space android:layout_width="16dp" android:layout_height="36dp" />

    <!-- ========================================== -->
    <!-- BOUTON CHARGER -->
    <!-- ========================================== -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">
        <Button
            android:id="@+id/btnLoad"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:alpha="0.9"
            android:background="@drawable/save_button"
            android:contentDescription="Charger un état de jeu" />
        <TextView
            android:id="@+id/labelLoad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="2dp"
            android:text="Charger"
            android:textColor="#fff"
            android:textSize="10sp" />
    </LinearLayout>
    <Space android:layout_width="16dp" android:layout_height="36dp" />

    <!-- ========================================== -->
    <!-- BOUTON AIDE -->
    <!-- ========================================== -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">
        <Button
            android:id="@+id/btnHelp"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:alpha="0.9"
            android:background="@drawable/blank_button"
            android:text="?"
            android:textColor="#fff"
            android:contentDescription="Aide sur les contrôles" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="2dp"
            android:text="Aide"
            android:textColor="#fff"
            android:textSize="10sp" />
    </LinearLayout>
    <Space android:layout_width="16dp" android:layout_height="36dp" />
</LinearLayout>

<!-- ========================================== -->
<!-- BOUTON REWIND (POSITIONNÉ À GAUCHE) -->
<!-- ========================================== -->
<Button
    android:id="@+id/rewind_button"
    android:layout_width="36dp"
    android:layout_height="36dp"
    android:layout_marginStart="30dp"
    android:layout_marginTop="30dp"
    android:alpha="0.9"
    android:background="@drawable/rewind_button"
    android:contentDescription="Rewind"
    android:text=""
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent" />

<TextView
    android:id="@+id/labelRewind"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="30dp"
    android:layout_marginTop="2dp"
    android:text="Rewind"
    android:textColor="#fff"
    android:textSize="10sp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/rewind_button" />

<ImageView
    android:id="@+id/rewind_spinner"
    android:layout_width="24dp"
    android:layout_height="24dp"
    android:layout_marginStart="8dp"
    android:src="@drawable/refresh_spinner"
    android:visibility="gone"
    app:layout_constraintStart_toEndOf="@id/rewind_button"
    app:layout_constraintTop_toTopOf="@id/rewind_button"
    app:layout_constraintBottom_toBottomOf="@id/rewind_button" />

<!-- ========================================== -->
<!-- BOUTON MENU (POSITIONNÉ EN BAS À DROITE) -->
<!-- ========================================== -->
<Button
    android:id="@+id/btnMenuIcon"
    android:layout_width="36dp"
    android:layout_height="28dp"
    android:layout_marginEnd="16dp"
    android:layout_marginBottom="16dp"
    android:alpha="0.9"
    android:background="@drawable/blank_button"
    android:contentDescription="@string/desc_menu"
    android:text="Menu"
    android:textColor="#fff"
    android:textSize="10sp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent" /> 